{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "*": [
        "node_modules/*",
        "typings/*"
      ]
    },
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "stripInternal": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": false,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "step/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}