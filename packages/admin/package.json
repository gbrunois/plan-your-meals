    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.18",
    "ts-node": "^8.0.1",
    "typescript": "^3.2.4"
  }
}
