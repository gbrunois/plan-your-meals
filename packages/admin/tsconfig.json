{
    "compilerOptions": {
      "declaration": true,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "strictPropertyInitialization": false,
      "noUnusedLocals": true,
      "stripInternal": true,
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2017", "dom"],
      "strict": true,
      "types": [
        "node"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
    ]
  }